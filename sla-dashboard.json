{
  "dashboard": {
    "id": null,
    "title": "SLA Breach Monitoring - Severe Breaches (15+ min)",
    "tags": ["sla", "monitoring", "breaches"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Unresolved SLA Count",
        "type": "stat",
        "targets": [
          {
            "expr": "sla_unresolved_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "displayName": "Unresolved SLA Records"
          },
          "overrides": []
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Severe SLA Breaches (15+ min past deadline)",
        "type": "stat",
        "targets": [
          {
            "expr": "sla_breached_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "displayName": "Severe SLA Breaches"
          },
          "overrides": []
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "SLA Resolution Time",
        "type": "histogram",
        "targets": [
          {
            "expr": "rate(sla_resolution_time_sum[5m]) / rate(sla_resolution_time_count[5m])",
            "refId": "A",
            "legendFormat": "Average Resolution Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "displayName": "Resolution Time (seconds)"
          },
          "overrides": []
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Unresolved SLA Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "sla_unresolved_count",
            "refId": "A",
            "legendFormat": "Unresolved Count"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Severe SLA Breaches Over Time (15+ min)",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(sla_breached_count[5m])",
            "refId": "A",
            "legendFormat": "Severe Breaches"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}